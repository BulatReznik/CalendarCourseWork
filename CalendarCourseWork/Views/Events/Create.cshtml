@page
@using CalendarCourseWork.BusinessLogic.Models;
@model Event

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Create</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <style>
        /* Ваши стили */
        body {
            background: -webkit-gradient(linear, left bottom, right top, from(#fc2c77), to(#6c4079));
            background: -webkit-linear-gradient(bottom left, #fc2c77 0%, #6c4079 100%);
            background: -moz-linear-gradient(bottom left, #fc2c77 0%, #6c4079 100%);
            background: -o-linear-gradient(bottom left, #fc2c77 0%, #6c4079 100%);
            background: linear-gradient(to top right, #fc2c77 0%, #6c4079 100%);
            color: #fff;
        }

        .container {
            padding: 20px;
        }

        .label {
            color: #fff; /* Цвет текста метки */
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-check-input {
            margin-right: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
        .card{
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <div class="container">

        <div class="card">
            <div class="card-body">
                <div style="font-size: 24px; font-weight: bold; color: black">
                    Добавить событие
                </div>

            </div>
        </div>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" form method="post">

                    <div class="form-group">
                        
                        <div class="card">
                            <div class="card-body">
                                <div style="font-size: 16px; font-weight: bold; color: black">
                                    Имя События:
                                </div>
                            </div>
                        </div>

                        <input type="text" id="EventName" name="EventName" class="form-control" />
                        <span asp-validation-for="EventName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        
                        <div class="card">
                            <div class="card-body">
                                <div style="font-size: 16px; font-weight: bold; color: black">
                                    Описание события:
                                </div>
                            </div>
                        </div>

                        <input type="text" id="EventDescription" name="EventDescription" class="form-control" />
                        <span asp-validation-for="EventDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        
                        <div class="card">
                            <div class="card-body">
                                <div style="font-size: 16px; font-weight: bold; color: black">
                                    Время события:
                                </div>
                            </div>
                        </div>

                        @{
                            // Извлечение компонентов из ViewBag.Date
                            int year = ((DateTime)ViewBag.Date).Year;
                            int month = ((DateTime)ViewBag.Date).Month;
                            int day = ((DateTime)ViewBag.Date).Day;
                        }
                        <input type="datetime-local" id="EventTime" name="EventTime" class="form-control"
                               value="@($"{year:D4}-{month:D2}-{day:D2}T00:00")" />
                        <span asp-validation-for="EventTime" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        
                        <div class="card">
                            <div class="card-body">
                                <div style="font-size: 16px; font-weight: bold; color: black">
                                    Категория:
                                </div>
                            </div>
                        </div>

                        @Html.DropDownList("CategoryId", new SelectList(ViewBag.Categories, "Id", "Header"))
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Добавить событие" class="btn btn-primary" />
                    </div>

                </form>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
