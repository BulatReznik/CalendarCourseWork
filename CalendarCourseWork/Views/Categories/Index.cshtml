@model IEnumerable<CalendarCourseWork.BusinessLogic.Models.Category>

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background: -webkit-gradient(linear, left bottom, right top, from(#fc2c77), to(#6c4079));
            background: -webkit-linear-gradient(bottom left, #fc2c77 0%, #6c4079 100%);
            background: -moz-linear-gradient(bottom left, #fc2c77 0%, #6c4079 100%);
            background: -o-linear-gradient(bottom left, #fc2c77 0%, #6c4079 100%);
            background: linear-gradient(to top right, #fc2c77 0%, #6c4079 100%);
            color: #fff;
        }

        .container {
            padding: 20px;
        }

        table {
            width: 100%;
            margin-bottom: 1rem;
            background-color: #f8f9fa;
            border-collapse: collapse;
            margin-top: 20px; /* Добавлен отступ сверху */
        }

        th, td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        th {
            background-color: #f8f9fa; /* Цвет фона заголовка */
            text-align: left;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2; /* Цвет фона четных строк */
        }

        a {
            color: #007bff;
            text-decoration: none;
            background-color: transparent;
        }

            a:hover {
                color: #0056b3;
                text-decoration: underline;
            }
        .card{
            margin-bottom: 5px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="btn-group" role="group" style="margin-top: 10px;">
            <a class="btn btn-primary" href="@Url.Action("Create", "Categories", new { userId = ViewBag.userId})">
                Добавать категорию
            </a>
        </div>

        <a class="btn btn-primary" style="margin-top: 10px;" href="@Url.Action("MonthWithEvents", "Calendar", new { year = DateTime.Now.Year, month = DateTime.Now.Month, userId = ViewBag.UserId })">
            Вернуться к календарю
        </a>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Имя категории</th>
                    <th scope="col">Отправлять на email?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Header)
                        </td>
                        <td>
                            @if (item.EmailSend)
                            {
                                <div>
                                    Да
                                </div>
                            }
                            else
                            {
                                <div>
                                    Нет
                                </div>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Изменить</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
