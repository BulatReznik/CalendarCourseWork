@using CalendarCourseWork.Models;
@model CategoryInputModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Create</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Ваши стили */
        body {
            background: -webkit-gradient(linear, left bottom, right top, from(#fc2c77), to(#6c4079));
            background: -webkit-linear-gradient(bottom left, #fc2c77 0%, #6c4079 100%);
            background: -moz-linear-gradient(bottom left, #fc2c77 0%, #6c4079 100%);
            background: -o-linear-gradient(bottom left, #fc2c77 0%, #6c4079 100%);
            background: linear-gradient(to top right, #fc2c77 0%, #6c4079 100%);
            color: #fff;
        }

        .container {
            padding: 20px;
        }

        .label {
            color: #fff; /* Цвет текста метки */
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-check-input {
            margin-right: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .card {
            margin-bottom: 5px;
        }

    </style>
</head>
<body>

    <div class="container">

        <div class="card">
            <div class="card-body">
                <div style="font-size: 24px; font-weight: bold; color: black">
                    Добавить категорию
                </div>
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post">

                    <div class="form-group">

                        <div class="card">
                            <div class="card-body">
                                <div style="font-size: 16px; font-weight: bold; color: black">
                                    Имя Категории:
                                </div>
                            </div>
                        </div>

                        <input type="text" id="Header" name="Header" class="form-control" />
                        <span asp-validation-for="Header" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="card">
                            <div class="card-body">
                                <div style="font-size: 16px; font-weight: bold; color: black">
                                    Отправялть Email?:
                                </div>
                            </div>
                        </div>

                        <div>
                            @Html.DropDownListFor(model => model.EmailSend, new List<SelectListItem>
                            {
                            new SelectListItem {Text = "Да", Value = "true", Selected = true },
                            new SelectListItem {Text = "Нет", Value = "false" },
                            }, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EmailSend, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Добавить категорию" class="btn btn-primary" />
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
